<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical"
    tools:context=".search.LocationActivity"
    tools:ignore="Overdraw">

    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/layoutcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackColor="#FF7CB6FF"
            app:indicatorColor="#1877F2"
            app:trackThickness="2dp"
            app:trackCornerRadius="2dp"
            android:indeterminate="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/back"
                android:padding="5dp"
                android:background="@drawable/circle"
                android:backgroundTint="?attr/backgroundcolor"
                android:src="@drawable/ic_back"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#596C84"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/editText"
                android:background="@drawable/btn_round"
                android:backgroundTint="?attr/backgroundcolor"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <ImageView
                    android:layout_gravity="center"
                    android:padding="9dp"
                    android:src="@drawable/ic_search"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:tint="#596C84"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:textColor="?attr/textcolor"
                    android:layout_gravity="center"
                    android:hint="@string/set_a_location"
                    android:textSize="18sp"
                    android:textColorHint="?attr/texttwocolor"
                    android:id="@+id/location"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/bold_roboto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   tools:ignore="ContentDescription" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20sp"
        android:textColor="?attr/texttwocolor"
        android:alpha="0.5"
        android:visibility="gone"
        android:id="@+id/nothing"
       android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bold_roboto"
        android:text="@string/nothing_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       tools:ignore="ContentDescription" />

    <TextView
        android:textSize="20sp"
        android:textColor="?attr/texttwocolor"
        android:alpha="0.5"
        android:id="@+id/set"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bold_roboto"
        android:text="@string/set_a_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       tools:ignore="ContentDescription" />

</LinearLayout>